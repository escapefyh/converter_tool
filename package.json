{
  "name": "converter-tool",
  "version": "1.0.0",
  "description": "一款集图片、视频、音频、PDF于一体的万能格式转换工具",
  "main": "main.js",
  "author": "fanyuhang",
  "license": "ISC",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "keywords": [
    "converter",
    "electron",
    "ffmpeg",
    "pdf"
  ],
  "build": {
    "appId": "com.converter.tool",
    "productName": "格式转换器",
    "directories": {
      "output": "dist"
    },
    "extraResources": [
      {
        "from": "./tools",
        "to": "tools"
      },
      {
        "from": "./bin",
        "to": "bin"
      }
    ],
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "runAfterFinish": true,
      "shortcutName": "格式转换器"
    },
    "files": [
      "**/*"
    ],
    "asarUnpack": [
      "**/node_modules/ffmpeg-static/**",
      "**/node_modules/ffprobe-static/**",
      "**/node_modules/sharp/**",
      "**/node_modules/office-to-pdf/**"
    ]
  },
  "devDependencies": {
    "electron": "^28.2.0", 
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "adm-zip": "^0.5.16",
    "ffmpeg-static": "^5.2.0",
    "ffprobe-static": "^3.1.0",
    "fluent-ffmpeg": "^2.1.3",
    "office-to-pdf": "^4.0.0",
    "pdfkit": "^0.14.0",
    "sharp": "^0.33.2"
  }
}